    <icon platform="android" src="pkg/icon/icon_72x72_round.png"   density="hdpi" />
    <icon platform="android" src="pkg/icon/icon_96x96_round.png"   density="xhdpi" />
    <icon platform="android" src="pkg/icon/icon_144x144_round.png" density="xxhdpi" />

    <!-- Android splash screens -->
    <preference name="SplashScreen" value="splash" />
    <preference name="SplashScreenDelay" value="250" />

